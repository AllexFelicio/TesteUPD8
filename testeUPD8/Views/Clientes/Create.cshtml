@model testeUPD8.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:blue">Cadastro Cliente</h1>
<hr />
<form asp-action="Create">
  <div class="row">
    <div class="col">
                <label asp-for="Cpf" class="control-label">CPF</label>
                <input asp-for="Cpf" class="form-control" placeholder="123.456.789-0" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
    </div>
    <div class="col">
      <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div style="margin-right:30px" class="col">
      <label asp-for="Nascimento" class="control-label">Data de Nascimento</label>
                <input asp-for="Nascimento" class="form-control" />
                <span asp-validation-for="Nascimento" class="text-danger"></span>
    </div>
    <div class="col">   
                <label style="margin-top:30px" asp-for="Sexo" class="form-check-label">Masculino</label>
                <input style="margin-top:35px" asp-for="Sexo" class="form-check-input" type="checkbox" value="M" />
                <label style="margin-top:30px" asp-for="Sexo" class="form-check-label">Feminino</label>
                <input style="margin-top:35px"  asp-for="Sexo" class="form-check-input" type="checkbox" value="F" />   
                <span asp-validation-for="Sexo" class="text-danger"></span>
 </div>
 
    <div class="row">
        <div class="col-6">
            <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
      <div class="col-3">
                
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <div class="col-3">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
    </div>
    </div>
  </div>
  <div class="d-flex flex-row-reverse">
  <div class="p-2"><input  style="margin:10px" type="submit" value="Salvar" class="btn btn-primary" /></div>
</div>
</form>

<div>
    <a class="text-decoration-none" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
